<Page x:Class="Blagodat.pages.AddClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Blagodat.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddClient">

    <Grid Background="White">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Код клиента"></TextBlock>
            <TextBox Name="CodeBox"></TextBox>
            <TextBlock Text="Email"></TextBlock>
            <TextBox Name="EmailBox"></TextBox>
            <TextBlock Text="Фамилия"></TextBlock>
            <TextBox Name="AddSurname"></TextBox>
            <TextBlock Text="Имя"></TextBlock>
            <TextBox Name="AddName"></TextBox>
            <TextBlock Text="Отчество"></TextBlock>
            <TextBox Name="AddPatron"></TextBox>
            <TextBlock Text="Дата рождения"></TextBlock>
            <DatePicker Name="DP"></DatePicker>
            <TextBlock Text="Паспортные данные"></TextBlock>
            <TextBox Name="PassportBox"></TextBox>
            <!--<TextBlock Text="Телефон"></TextBlock>
            <TextBox Name="PhoneBox"></TextBox>-->
            <Button Name="SaveButton" Click="SaveButton_Click">Сохранить</Button>
        </StackPanel>
    </Grid>
</Page>
